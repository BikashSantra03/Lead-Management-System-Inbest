			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Get the cookies from the response",
									"const cookies = pm.response.cookies;",
									"",
									"// Check if the 'Token' cookie exists and store it in the environment",
									"if (cookies.has('Token')) {",
									"    const token = cookies.get('Token');",
									"    pm.environment.set('token', token);",
									"    console.log('Token stored in environment:', token);",
									"} else {",
									"    console.log('Token cookie not found in response');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"manager@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
